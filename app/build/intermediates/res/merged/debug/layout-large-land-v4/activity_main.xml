<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mirshod.braille_pad.MainActivity"
    android:orientation="vertical"
    android:weightSum="9.5"
    android:background="@drawable/shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.4"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp"
        android:weightSum="4.38">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.19"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            tools:ignore="NestedWeights">

            <Button
                android:layout_width="match_parent"
                android:id="@+id/button17"
                android:background="@drawable/volume_up"
                android:layout_weight="0.3"
                android:layout_marginTop="10dp"
                android:layout_height="30dp" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/button16"
                android:background="@drawable/volume_down"
                android:layout_weight="0.3"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/button14"
                android:layout_gravity="center_vertical|center_horizontal"
                tools:ignore="NestedWeights"
                android:background="@drawable/leftpage"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <Tacktile.CustomView_Large
            android:id="@+id/customView_Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/background"
            app:key="false"
            tools:ignore="RtlHardcoded"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.19"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            tools:ignore="NestedWeights">

            <Button
                android:layout_width="match_parent"
                android:id="@+id/button17_1"
                android:background="@drawable/volume_up"
                android:layout_weight="0.3"
                android:layout_marginTop="10dp"
                android:layout_height="30dp"
                android:visibility="invisible" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/button16_1"
                android:background="@drawable/volume_down"
                android:layout_weight="0.3"
                android:layout_height="30dp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/button15"
                android:layout_gravity="center_vertical|center_horizontal"
                tools:ignore="NestedWeights"
                android:background="@drawable/rightpage"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.9"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="0dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="1"
            tools:ignore="NestedWeights">

            <Button
                android:text="F1"
                android:layout_height="match_parent"
                android:id="@+id/button8"
                android:background="@mipmap/fun"
                android:layout_width="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="1"
            tools:ignore="NestedWeights">

            <Button
                android:text="F2"
                android:layout_height="match_parent"
                android:id="@+id/button9"
                android:background="@mipmap/fun"
                android:layout_width="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="1"
            tools:ignore="NestedWeights">

            <Button
                android:text="F3"
                android:layout_height="match_parent"
                android:id="@+id/button10"
                android:background="@mipmap/fun"
                android:layout_width="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="1"
            tools:ignore="NestedWeights">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="1"
            tools:ignore="NestedWeights">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <Button
                android:text="F4"
                android:id="@+id/button11"
                android:background="@mipmap/fun"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <Button
                android:text="F5"
                android:layout_height="match_parent"
                android:id="@+id/button12"
                android:background="@mipmap/fun"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <Button
                android:text="F6"
                android:layout_height="match_parent"
                android:id="@+id/button13"
                android:background="@mipmap/fun"

                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.9"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:baselineAligned="false"
        android:weightSum="8">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <Button
                android:text=""
                android:layout_height="match_parent"
                android:id="@+id/button5"
                android:background="@mipmap/backspace"

                android:layout_width="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="6"
            tools:ignore="NestedWeights">

            <Button
                android:text=""
                android:id="@+id/button6"
                android:background="@drawable/qwer"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_width="200dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <Button
                android:text=""
                android:layout_height="match_parent"
                android:id="@+id/button7"
                android:background="@mipmap/enter"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_gravity="center" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.3"
        android:weightSum="5"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <Button
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button"
                android:background="@mipmap/ctrl"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <Button
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button1"
                android:background="@mipmap/power"
                tools:ignore="NestedWeights"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="10dp"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <mirshod.braille_pad.circleButton
                android:id="@+id/aylbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button3"
                android:background="@mipmap/tts"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="10dp"
                tools:ignore="NestedWeights"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <Button
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button4"
                android:background="@mipmap/ctrl"
                android:layout_gravity="center"
                tools:ignore="NestedWeights"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="10dp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
